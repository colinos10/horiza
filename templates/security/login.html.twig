{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}

    <header class="container-fluid p-5 text-center bg-light">
        <h2>HORIZA</h2>
    </header>

    <main class="container-fluid p-5">

        <h1 class="col-12 text-center my-3">Connexion</h1>

        <form method="post" class="col-4 offset-4">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {# {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">déconnexion</a>
                </div>
            {% endif %} #}

            <div class="my-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>

            <div class="my-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me" class="mr-2">se souvenir de moi
                </label>
            </div>

            <div class="text-right">
                <button class="btn btn-secondary my-3" type="submit">Connexion</button>
            </div>

        </form>

    </main>

{% endblock %}
